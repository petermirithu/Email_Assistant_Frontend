<style>
    .sideBar {
        padding: 10px;
        height: 100%;
    }

    .sideBar h6 {
        font-weight: bold;
    }

    .inbox {
        margin-top: 30px;
        height: 40%;
    }

    .attachments {
        height: 40%;
    }

    .mailAvatar {
        overflow: visible;
        border: 0;
        background-color: transparent;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 5px;
        border-radius: 100%;
    }

    .mailAvatar span {
        color: #fff;
        padding: 5px;
    }

    .cardX {
        display: inline-flex;        
        border-bottom: 1px solid rgb(229, 229, 229);
        width: 100%;
        cursor: pointer;
        text-decoration: none;
        padding: 5px;
        border-radius: 20px;
    }

    .cardX:hover{                
        box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    }

    .mailBody {
        margin-left: 10px;
        width: 100%;
        display: block;
        overflow: hidden;

    }

    .subject {
        font-weight: bold;
        margin: 0px !important;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .time {
        font-size: small;
        margin-right: 1px;
        float: right;
    }

    .from {
        font-size: small;
        margin: 0px !important;
    }

    .attachments .cardX{
        background-color: #d9e3f1 !important;
        margin-bottom: 10px;
    }
</style>

<div class="sideBar bg-light" data-bs-theme="light">    
    <div class="inbox">
        <h6>Inbox</h6>
        <div id="inboxMails">
            No emails have been processed
        </div>
    </div>
    <div class="attachments">
        <h6>Attachments</h6>
        <div id="inboxAttachments">
            No attachments processed
        </div>
    </div>
</div>
<script>
    const goToEmailDetailsSection = (emailId) => {                        
        $("#dashboardBtn").show()            

        $("#homeSection").slideUp("slow");
        $("#attachmentDetailsSection").slideUp("slow");
        $("#emailDetailsSection").slideDown("slow");

        if(emailId?.length==0){
            emailId=document.getElementById("attachmentDetailEmailId").innerHTML;                       
        }

        socket.emit("get_mail", emailId);
    }    

    const goToEmailAttachmentSection = (attachmentId) => {          
        $("#dashboardBtn").show()            

        $("#emailDetailsSection").slideUp("slow");
        $("#homeSection").slideUp("slow");
        $("#attachmentDetailsSection").slideDown("slow");
        
        socket.emit("get_attachment", attachmentId);
    }
</script>