</head>

<body>
  <%- include('../partials/navbar'); %>
    <!-- Page Content -->
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-2" style="padding: 0px;">
          <%- include('../partials/sideBar'); %>
        </div>
        <div class="col-md-10 content">
          <h1 class="display-4 welcomeTxt">Hello Pyra 👋🏼!</h1>
