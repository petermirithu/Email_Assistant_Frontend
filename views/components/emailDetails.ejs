<style>
    body {
        overflow: hidden;
    }

    .content {
        padding: 30px;
        height: 95vh;
        overflow: auto !important;
    }

    .emailBody {
        padding: 10px;
        border-radius: 10px;
        margin-bottom: 10px;
    }

    .taskCard {
        padding: 10px;
        border-radius: 10px;
        margin-bottom: 10px;
    }

    .title {
        font-weight: bold;
    }

    .btnCard {
        padding: 10px;
        border-radius: 10px;
        margin-bottom: 10px;
    }

    .btnCard .btn {
        margin-bottom: 10px;
    }
</style>

<body>
    <h1 class="display-4 welcomeTxt" id="emailDetailTitle">Loading Title...</h1>
    <p class="lead" id="emailDetailFrom">From:- Loading ...</p>

    <div class="row">
        <div class="col-md-7">
            <div id="emailDetailBody" class="card emailBody bg-light">
                <p>Loading Email Body ...</p>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card bg-light taskCard">
                <h5 class="title">Tasks / Key Points</h5>                
                <ul id="emailDetailTasks">
                    <li>Loading ...</li>                    
                </ul>
            </div>

            <div class="card bg-light btnCard">
                <h5 class="title">How can I help you with this Email?</h5>
                <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal"
                    data-bs-target="#replyMailModal">Generate reply suggestion</button>
                <button type="button" class="btn btn-outline-info">Manually reply to email</button>
                <button type="button" class="btn btn-outline-light">Get Summary</button>
                <button type="button" class="btn btn-outline-dark">Mark as Read</button>
            </div>
        </div>
    </div>


    <!-- Email Reply Modal -->   
    <div class="modal fade modal-centered modal-scrollable" id="replyMailModal" tabindex="-1" aria-labelledby="replyMailModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="replyMailModalLabel">Reply Suggestion</h5>                    
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"></span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Modal body text goes here.</p>
                    <p>Modal body text goes here.</p>
                    <p>Modal body text goes here.</p>
                    <p>Modal body text goes here.</p>
                    <p>Modal body text goes here.</p>
                    <p>Modal body text goes here.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Send Reply</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</body>